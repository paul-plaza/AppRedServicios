<!DOCTYPE html>
<html id="red">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi Red Servicios</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="navbar-header">
            <input type="checkbox" class="checkbox" id="menu-toogle" />
            <label for="menu-toogle" class="menu-toogle"></label>
            <nav class="nav">
                <label class="titulo">Mis Servicios AIG Seguros</label>
                <a href="#" class="nav__item">@ViewBag.Mensaje</a>
                
                <a href="#" class="nav__item">Item del Menú 2</a>
                <a href="#" class="nav__item">Item del Menú 3</a>
                <a href="#" class="nav__item">Item del Menú 4</a>
                <a href="#" class="nav__item">Item del Menú 5</a>
            </nav>
            <span>
                <a href="@Url.Action("Create")" class="navbar-brand">
                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Mis Servicios AIG Seguros
                </a>
            </span>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Mi aplicación ASP.NET</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
